<h2>My Clients</h2>

<div id="left-bar">
    <% if policy(Client.new).create? %>
      <%= link_to "New Client", new_client_path, class: 'btn btn-success' %>
    <% end %>
  <div class="dashboard">
  <div id="client-details">
    <% @clients.each do |client| %>
      <%= link_to client.last_name, client %>
      </br>
    <% end %>
  </div>
  </div>
</div>


<div ng-controller="customersController"> 
  <input ng-model="query" type="text"
        placeholder="Filter by" autofocus>
Clients:
<table>
  <tr ng-repeat="x in names">
    <td>{{ x.first_name }}</td>
    <td>{{ x.last_name }}</td>
  </tr>
</table>

</div>

