<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3">
		<%= render partial: "clients/client_sidebar", object: @client %>
	</div>

	<div class="pure-u-1 pure-u-md-1-3 pure-u-lg-2-3">
    <div class="main padding">
			<!--<%= render 'navbar' %>-->
			<h3>
				Action plan: <%= @action_plan.description %>
				<%= link_to edit_action_plan_path(@action_plan) do %>
						<span class="icon-pencil-1"></span>
				<% end %>
			</h3>

			<h6>
				<% if current_page?(action_plan_path) %>
					Add goals
					<%= link_to new_action_plan_goal_path(@action_plan) do %>	
						<span class="icon-plus-circled"></span>
					<% end %>
				<% end %>
			</h6>

		<%= render @goals %>

		</div>
	</div>
</div>
