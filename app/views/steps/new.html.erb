<div class="pure-g">
  	<div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3">
		<%= render partial: "clients/client_sidebar", object: @client %>
 	</div>


	<div class="pure-u-1 pure-u-md-2-3 pure-u-lg-2-3">
	    <div class="main padding">

	    	<%= render 'action_plans/navbar' %>

			<h3>
				Action plan: <%= @action_plan.description %>
			</h3>

			<h4>
				Goal:<%= @goal.description %>
			</h4>

			<%= form_for([@goal, @step], html: { class: "pure-form pure-form-stacked" }) do |f| %>
				<div class="form-group">
					<%= f.label "Step description" %>
					<%= f.text_field :description, class: 'pure-input', placeholder: "Enter step description" %>
				</div>

				<div class="form-group">
			      <%= f.label "Scheduled Date" %>
			      <%= f.date_field :due_by, class: 'pure-input', placeholder: "Enter step due date" %>
    			</div>

				<div class="form-group">
					<%= f.label :complete %>
					<%= f.check_box :complete %>
				</div>

				<div>
					<%= f.submit "Save step", class: 'pure-button pure-button-primary' %>
					<%= link_to "Cancel", :back, class: 'btn btn-default' %>
				</div>
				
			<% end %>
		</div>
	</div>
</div>

