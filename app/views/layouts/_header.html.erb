<% if user_signed_in? %>
	<div class="pure-menu pure-menu-open pure-menu-horizontal">
    	
    	<%= link_to image_tag('medalogo.jpg'), clients_path, { :class=> "inline-display pure-menu-heading" } %>
	  	
	  	<ul class="float-right">
	  		<%= link_to "Hello, #{current_user.first_name}!", edit_user_registration_path(current_user) %>
