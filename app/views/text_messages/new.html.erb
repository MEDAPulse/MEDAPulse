<h3>New Text Message</h3>

<div class="col-md-8">
<%= form_for([@step, @text_message]) do |f| %>
  <div class="form-group">
    <%= f.label "Text Content" %>
    <%= f.text_field :content, class: 'form-control',
      placeholder: "What would you like to say?" %>
  </div>
  <h5>Leave the date blank to send your text now</h5>
  <div class="form-group">
    <%= f.label "Scheduled Date" %>
    <%= f.date_field :scheduled_date, class: 'form-control',
      placeholder: "When would you like to send it?" %>
  </div>
  <div class="form-group">
    <%= link_to "Cancel", :back, class: 'btn btn-default' %>
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
